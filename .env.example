# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=123456789012

# AWS Bedrock Configuration
# Note: Use us.anthropic for US region, eu.anthropic for EU, apac.anthropic for APAC
BEDROCK_MODEL_ID=us.anthropic.claude-sonnet-4-5-20250929-v1:0
BEDROCK_EMBEDDING_MODEL_ID=amazon.titan-embed-text-v2:0
BEDROCK_MAX_TOKENS=4096
BEDROCK_TEMPERATURE=0.7

# Bedrock Error Handling
BEDROCK_REQUEST_TIMEOUT=60
BEDROCK_MAX_RETRIES=5
BEDROCK_BACKOFF_MULTIPLIER=2.0
BEDROCK_BACKOFF_MAX=32

# Titan Embeddings Configuration
TITAN_EMBEDDING_DIMENSION=1024
TITAN_NORMALIZE=true

# Pinecone Configuration
PINECONE_API_KEY=your-pinecone-api-key-here
PINECONE_ENVIRONMENT=us-east-1-aws
PINECONE_INDEX_NAME=zendesk-sme-finder
PINECONE_DIMENSION=1024
PINECONE_METRIC=cosine

# S3 Bucket Configuration
S3_BUCKET_TICKETS=zendesk-sme-tickets
S3_BUCKET_CRE_DATA=zendesk-sme-cre-profiles
S3_BUCKET_METADATA=zendesk-sme-metadata

# Zendesk Configuration
ZENDESK_DOMAIN=yourcompany.zendesk.com
ZENDESK_API_TOKEN=your-zendesk-api-token
ZENDESK_EMAIL=api@yourcompany.com
ZENDESK_WEBHOOK_SECRET=your-webhook-secret

# Slack Configuration
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_SIGNING_SECRET=your-slack-signing-secret
SLACK_CHANNEL_HANDOFFS=#sme-handoffs
SLACK_ALERT_CHANNEL=#sme-alerts

# Step Functions
STEP_FUNCTION_ARN=arn:aws:states:us-east-1:123456789012:stateMachine:sme-matching-workflow

# Application Configuration
LOG_LEVEL=INFO
ENVIRONMENT=development
MAX_CONCURRENT_EXECUTIONS=10
RAG_TIMEOUT_SECONDS=300

# Feature Flags
ENABLE_FEEDBACK_LOOP=true
ENABLE_COST_TRACKING=true
ENABLE_XRAY_TRACING=true

# Performance Tuning
VECTOR_SEARCH_TOP_K=20
MIN_CONFIDENCE_THRESHOLD=0.60
MAX_SME_RECOMMENDATIONS=3

# Cost Limits
DAILY_BEDROCK_TOKEN_LIMIT=1000000
MONTHLY_BUDGET_USD=100
